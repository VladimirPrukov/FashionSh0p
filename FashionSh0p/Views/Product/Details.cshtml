@using FashionWave.ViewModels
@model ProductDetailsViewModel

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 border-0">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="card-img-top img-fluid rounded-top" style="max-height: 500px;; object-fit: cover;" />

                <div class="card-body">
                    <h2 class="card-title text-center">@Model.Name</h2>
                    <p class="card-text mt-3">@Model.Description</p>
                    <p class="fs-5"><strong>Цена:</strong> @Model.Price.ToString("F2") лв.</p>

                    <div class="d-grid">
                        <button class="btn btn-primary add-to-cart-btn" data-product-id="@Model.Id">
                            <i class="bi bi-cart-plus"></i> Добави в кошницата
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
