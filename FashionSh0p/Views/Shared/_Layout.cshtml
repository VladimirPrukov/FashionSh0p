
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FashionWave</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FashionWave.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/productStyles.css" />
    <link rel="stylesheet" href="~/css/cart.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FashionWave</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <header>
        <nav class="main-nav">
            <ul class="menu">
                <li class="dropdown">
                    <a href="#">ЖЕНИ</a>
                    <div class="mega-menu">
                        <div class="mega-column">
                            <a href="#" class="mega-title">Дамско облекло</a>
                            <a href="/Product/Products?productType=Рокли">Рокли</a>
                            <a href="/Product/Products?productType=Блузи">Блузи</a>
                            <a href="#">Суичъри</a>
                            <a href="#">Яке & Палта</a>
                            <a href="#">Поли</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Дамски обувки</a>
                            <a href="#">Маратонки</a>
                            <a href="#">Сандали</a>
                            <a href="#">Обувки с ток</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Дамски аксесоари</a>
                            <a href="#">Чанти</a>
                            <a href="#">Бижута</a>
                            <a href="#">Шалове</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Плюс размери</a>
                            <a href="#">Рокли</a>
                            <a href="#">Блузи</a>
                            <a href="#">Потници</a>
                        </div>
                    </div>
                </li>
                <li class="dropdown">
                    <a href="#">МЪЖЕ</a>
                    <div class="mega-menu">
                        <div class="mega-column">
                            <a href="#" class="mega-title">Мъжко облекло</a>
                            <a href="#">Блузи и блузи с яка</a>
                            <a href="#">Суичъри</a>
                            <a href="#">Яке & Палта</a>
                            <a href="#">Пижами</a>
                            <a href="#">Бельо</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Мъжки обувки</a>
                            <a href="#">Маратонки</a>
                            <a href="#">Сандали</a>
                            <a href="#">Високи обувки</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Мъжки аксесоари</a>
                            <a href="#">Мъжки шапки с козирка</a>
                            <a href="#">Мъжки слънчеви очила</a>
                            <a href="#">Оптични рамки</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Ново</a>
                            <a href="#">Мъжко облекло</a>
                            <a href="#">Блузи</a>
                            <a href="#">Бельо</a>
                        </div>
                    </div>
                </li>
                <li class="dropdown">
                    <a href="#">ДЕЦА</a>
                    <div class="mega-menu">
                        <div class="mega-column">
                            <a href="#" class="mega-title">Облекло за момичета</a>
                            <a href="#">Блузи</a>
                            <a href="#">Суичъри</a>
                            <a href="#">Якета</a>
                            <a href="#">Рокли § Поли § Гащеризони</a>
                            <a href="#">Комплекти за момичета</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Облекло за момичета</a>
                            <a href="#">Блузи</a>
                            <a href="#">Суичъри</a>
                            <a href="#">Якета</a>
                            <a href="#">Комплекти за момчета</a>
                            <a href="#">Бельо</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Детски обувки</a>
                            <a href="#">Маратонки</a>
                            <a href="#">Високи обувки</a>
                            <a href="#">За най-малките</a>
                        </div>
                        <div class="mega-column">
                            <a href="#" class="mega-title">Датски аксесоари</a>
                            <a href="#">Шапки с козирка</a>
                            <a href="#">Весели чорапки</a>
                            <a href="#">Оптични рамки</a>
                        </div>
                    </div>
                </li>

                <li class="nav-item position-relative">
                    <div class="cart-icon-container">
                        <a class="nav-link position-relative" href="/Cart/Cart">
                            <i class="bi bi-bag" style="font-size: 1.5rem;"></i>
                        </a>
                        <span id="cart-count" class="badge rounded-pill bg-danger">
                            0
                        </span>
                    </div>

                    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1055">
                        <div id="cart-toast" class="toast align-items-center text-bg-success border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
                            <div class="d-flex">
                                <div class="toast-body d-flex align-items-center">
                                    <i class="bi bi-cart-check-fill me-2"></i>
                                    Продуктът беше добавен в количката!
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    </div>
            </ul>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FashionWave - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
